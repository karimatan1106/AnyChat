@model AnyChat.Models.Room

@{
    Layout = null;
    @Scripts.Render("~/bundles/jqueryval");
}

@using (Html.BeginForm("Create", "Rooms"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.RoomName, new { htmlAttributes = new { @class = "form-control", @placeholder = "ルーム名を入力してください" } })
                @Html.ValidationMessageFor(model => model.RoomName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.EditorFor(model => model.RoomPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "あいことばを入力してください" } })
                @Html.ValidationMessageFor(model => model.RoomPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="pull-right" style="margin-right:15px;">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}